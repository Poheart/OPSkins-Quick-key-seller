{
  "manifest_version": 2,

  "name": "OPSkins Quick Key Seller",
  "description": "Efficient tool to quick sell your keys to OPSkins",
  "version": "1.8.2",

  "content_scripts": [
    {
      "matches": ["https://opskins.com/*"],
      "css": ["style.css"],
      "js": ["jquery.js", "seller.js"],
      "run_at": "document_end"
    }
  ],
  "icons": { "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png" },

  "permissions": [
    "activeTab",
    "storage",
    "https://opskins.com/"
  ]
}